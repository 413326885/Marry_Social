<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_item_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_bkg_selector" >

    <com.pkjiao.friends.mm.roundedimageview.RoundedImageView
        android:id="@+id/reply_list_person_pic"
        android:layout_width="102px"
        android:layout_height="102px"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person_default_small_pic"
        app:border_width="0dp"
        app:corner_radius="50dp"
        app:oval="false" />

    <TextView
        android:id="@+id/reply_list_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="6dp"
        android:alpha="0.3"
        android:text="10月8日"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/reply_list_msg_time"
        android:layout_toRightOf="@id/reply_list_person_pic"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/reply_list_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:text="楠楠"
            android:textColor="#1abc9c" />

        <TextView
            android:id="@+id/reply_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:text="房东是贱人，你怎么看？"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>