    <com.dhn.marrysocial.view.RefreshListView
        android:id="@+id/dynamic_info_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#00000000" >
    </com.dhn.marrysocial.view.RefreshListView>

