<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/edit_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1abc9c" >

        <RelativeLayout
            android:id="@+id/edit_info_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/default_bkg_selector"
            android:clickable="true" >

            <ImageView
                android:id="@+id/edit_info_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_return_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/edit_info_arrow"
                android:gravity="center_vertical"
                android:paddingRight="12dp"
                android:text="基本信息"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/edit_info_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/default_bkg_selector"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/edit_info_toolbar"
        android:alpha="0.6"
        android:background="@color/darkgray" />

    <RelativeLayout
        android:id="@+id/edit_info_name_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_info_toolbar"
        android:background="@drawable/gray_bkg_selector"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:paddingBottom="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="10dp"
            android:text="姓名"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edit_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:alpha="0.6"
            android:paddingRight="24dp"
            android:text="楠楠"
            android:textSize="16dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/edit_info_name_group"
        android:alpha="0.6"
        android:background="@color/darkgray" />

    <RelativeLayout
        android:id="@+id/edit_info_signature_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_info_name_group"
        android:background="@drawable/gray_bkg_selector"
        android:clickable="true" >

        <TextView
            android:id="@+id/edit_info_signature_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:paddingBottom="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="10dp"
            android:text="签名"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edit_info_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:alpha="0.6"
            android:paddingBottom="4dp"
            android:paddingRight="24dp"
            android:paddingTop="4dp"
            android:text="我就是我，你呢？"
            android:textSize="16dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/edit_info_signature_group"
        android:alpha="0.6"
        android:background="@color/darkgray" />

    <RelativeLayout
        android:id="@+id/edit_info_gender_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_info_signature_group"
        android:background="@drawable/gray_bkg_selector"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:paddingBottom="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="10dp"
            android:text="性别"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/edit_info_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/gender_selector"
            android:button="@null"
            android:checked="false" >
        </RadioButton>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/edit_info_gender_group"
        android:alpha="0.6"
        android:background="@color/darkgray" />

    <RelativeLayout
        android:id="@+id/edit_info_astro_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_info_gender_group"
        android:background="@drawable/gray_bkg_selector"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:paddingBottom="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="10dp"
            android:text="星座"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/edit_info_astro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="24dp"
            android:src="@drawable/ic_aries_baiyang_green" >
        </ImageView>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/edit_info_astro_group"
        android:alpha="0.6"
        android:background="@color/darkgray" />

    <RelativeLayout
        android:id="@+id/edit_info_profession_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_info_astro_group"
        android:background="@drawable/gray_bkg_selector"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:paddingBottom="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="10dp"
            android:text="行业"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edit_info_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:alpha="0.6"
            android:paddingRight="24dp"
            android:text="金融业"
            android:textSize="16dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/edit_info_profession_group"
        android:alpha="0.6"
        android:background="@color/darkgray" />

</RelativeLayout>