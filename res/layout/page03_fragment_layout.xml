<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/community_headbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#666666" >

        <TextView
            android:id="@+id/community_headbar_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:text="page03 fragment"
            android:textColor="@color/headbar_title_color"
            android:textSize="@dimen/headbar_title_size" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/headbar_cursor"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/community_headbar"
        android:scaleType="matrix"
        android:background="@android:color/holo_blue_bright" />

</RelativeLayout>
