<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/edit_info_item_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1abc9c" >

        <RelativeLayout
            android:id="@+id/edit_info_item_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/default_bkg_selector"
            android:clickable="true" >

            <ImageView
                android:id="@+id/edit_info_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_return_button" />

            <TextView
                android:id="@+id/edit_info_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/edit_info_item_arrow"
                android:gravity="center_vertical"
                android:paddingRight="12dp"
                android:text="更改信息"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/edit_info_item_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/default_bkg_selector"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_info_item_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_info_item_toolbar"
        android:clickable="true" >

        <EditText
            android:id="@+id/edit_info_item_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/feedback_selector"
            android:hint="更改信息..."
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:paddingRight="4dp"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/edit_info_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_info_item_group"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:text="更改信息"
        android:textColor="@color/gray"
        android:alpha="0.8"
        android:textSize="12dp" />

</RelativeLayout>