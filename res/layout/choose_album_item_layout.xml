<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choose_album_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_bkg_selector" >

    <ImageView
        android:id="@+id/choosed_album"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:background="@color/lightgray"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/choosed_album_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_new"
        android:clickable="false"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/choosed_album_icon"
        android:layout_toRightOf="@id/choosed_album"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/choosed_album_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.9"
            android:text="文件夹"
            android:textSize="16dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/choosed_album_photo_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:alpha="0.7"
            android:text="88张"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>