<?xml version="1.0" encoding="utf-8"?>
<com.pkjiao.friends.mm.photochoose.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/choosed_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightgray"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/choosed_photo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:src="@drawable/icon_photo_unselected" />
    </RelativeLayout>

</com.pkjiao.friends.mm.photochoose.SquareLayout>