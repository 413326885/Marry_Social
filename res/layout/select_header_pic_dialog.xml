<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_trans_bkg" >

    <TextView
        android:id="@+id/select_from_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_bkg_selector"
        android:padding="10dp"
        android:text="拍照"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/select_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/select_from_camera"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:alpha="0.6"
        android:background="@color/darkgray" />

    <TextView
        android:id="@+id/select_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_divider"
        android:background="@drawable/default_bkg_selector"
        android:padding="10dp"
        android:text="相册"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>