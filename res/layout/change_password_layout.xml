<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1abc9c" >

    <RelativeLayout
        android:id="@+id/change_password_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <RelativeLayout
            android:id="@+id/change_password_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gray_bkg_selector"
            android:clickable="true" >

            <ImageView
                android:id="@+id/change_password_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_return_button" />

            <TextView
                android:id="@+id/change_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/change_password_arrow"
                android:gravity="center_vertical"
                android:paddingRight="12dp"
                android:text="修改密码"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RelativeLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/change_password_phone_num"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password_toolbar"
        android:background="@drawable/register_login_edit_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="45dp"
        android:hint="手机号码"
        android:inputType="phone"
        android:minWidth="200dp"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/change_password_verify_code"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password_phone_num"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" >

        <EditText
            android:id="@+id/change_password_input_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register_login_edit_selector"
            android:hint="输入验证码"
            android:minWidth="80dp"
            android:textSize="14dp" />

        <Button
            android:id="@+id/change_password_get_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/change_password_input_verify_code"
            android:background="@drawable/register_login_button_selector"
            android:clickable="true"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/change_password_new_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password_verify_code"
        android:background="@drawable/register_login_edit_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:hint="输入新密码"
        android:minWidth="200dp"
        android:textSize="14dp" />

    <Button
        android:id="@+id/change_password_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password_new_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/register_login_button_selector"
        android:clickable="true"
        android:padding="5dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>